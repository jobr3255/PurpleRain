# Based on Bridge by ScionicSpectre
# vim:set ts=2 sw=2 sts=2 ai et:
#
# This is the GTK+ 2 version of PurpleRain. It's whole purpose is to look as the
# GTK+ 3 version as much as possible until GTK+ 2 dies completely.
#
# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
gtk-color-scheme = "text_color:white\nbase_color:#161229"
# Foreground/background
gtk-color-scheme = "fg_color:#eeeeec\nbg_color:#33323b"
#Â Selected foreground/background
gtk-color-scheme = "selected_fg_color:#ffffff\nselected_bg_color:#215d9c"
# Insensitive foreground/background
gtk-color-scheme = "insensitive_fg_color:#94567f\ninsensitive_bg_color:#2d3234"
# Menus
gtk-color-scheme = "menu_color:#2e272e"
# Links
gtk-color-scheme = "link_color:#4a90d9\nvisited_link_color:#2a76c6"
# Treeview headers
gtk-color-scheme = "column_header_color:#8c5379\nhover_column_header_color:#966fbd"
# Window decoration
gtk-color-scheme = "window_color:#33171d"
# Tooltips
gtk-color-scheme = "tooltip_fg_color:#ffffff\ntooltip_bg_color:#221f33"

# Set GTK settings
gtk-auto-mnemonics              = 1
gtk-primary-button-warps-slider = 1

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
include "hacks-dark.rc"
